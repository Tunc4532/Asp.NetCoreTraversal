@model ResetPasswordViewModel
@{
    Layout = null;
}




<div class="container">
    <br /><br />
    <h3>Şifre Yenileme Sayfası</h3>
    <form method="post">
        <label>Şifrenizi Giriniz</label>
        <input type="text" class="form-control" asp-for="Password" />
        <br />
        <label>Şifrenizi Tekrar Giriniz</label>
        <input type="text" class="form-control" asp-for="ConfirmPassword" />
        <br />
        <button class="btn btn-outline-info">Şifreyi Güncelle</button>

    </form>
</div>

