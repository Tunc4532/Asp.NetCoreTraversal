@model List<AppRole>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

@if (Model.Count > 0)
{
    <div class="container-fluid py-4">
        <div class="row">
            <div class="col-12">
                <div class="card mb-4">
                    <div class="card-header pb-0">
                        <h6>Onay Bekleyen Rezervasyonlarım</h6>
                    </div>
                    <div class="card-body px-0 pt-0 pb-2">
                        <div class="table-responsive p-0">
                            <table class="table align-items-center mb-0">
                                <thead>
                                    <tr>
                                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7"># </th>
                                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Rol Adı </th>
                                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Rolü Sil </th>
                                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Rolü Güncelle </th>
                                    </tr>
                                </thead>

                                @foreach (var item in Model)
                                {
                                    count++;
                                    <tbody>
                                        <tr>
                                            <td>
                                                <p class="text-xs font-weight-bold mb-0">@count</p>
                                            </td>
                                            <td>
                                                <p class="text-xs font-weight-bold mb-0">@item.Name</p>
                                            </td>
                                            <td>
                                                <a href="/Admin/Role/DeleteRole/@item.Id" class="btn btn-outline-danger">Rolü Sil</a>
                                            </td>
                                            <td>
                                                <a href="/Admin/Role/UpdateRole/@item.Id" class="btn btn-outline-info">Rolü Güncelle</a>
                                            </td>
                                        </tr>
                                    </tbody>
                                }
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{  
        <div>
            <span class="text-xs font-weight-bold mb-0">Herhangi bir Role bulunamadı.</span>
        </div>
        <br /><br /><br /><br />
}

<a href="/Admin/Role/AddRole/" class="btn btn-outline-success">Yeni Rol Oluştur</a>