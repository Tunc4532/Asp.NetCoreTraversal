@model List<GetAllDestinationQueryResult>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<h3 style="text-align: center">CQRS Tur Verileri</h3>
<table class="table table-striped table-bordered table-dark">
    <tr>
        <th>#</th>
        <th>Şehir</th>
        <th>Gün Gece</th>
        <th>Fiyat</th>
        <th>Kapasite</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach(var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td>@item.city</td>
            <td>@item.daynight</td>
            <td>@item.price₺</td>
            <td>@item.capacity</td>
            <td><a href="#" class="btn btnbg-danger">Sil</a></td>
            <td><a href="#" class="btn btnbg-info">Güncelle</a></td>
        </tr>
    }
</table>
<a href="#" class="btn btn-outline-warning">Yeni Tur Rotası Girşi</a>