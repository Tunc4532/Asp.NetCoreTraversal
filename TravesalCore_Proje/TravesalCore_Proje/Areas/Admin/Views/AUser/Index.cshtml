@using EntityLayer.Concrete
@model List<AppUser>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card mb-4">
                <div class="card-header pb-0">
                    <h6>Onay Bekleyen Rezervasyonlarım</h6>
                </div>
                <div class="card-body px-0 pt-0 pb-2">
                    <div class="table-responsive p-0">
                        <table class="table align-items-center mb-0">
                            <thead>
                                <tr>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7"># </th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Ad Soyad </th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ">Kullanıcı Adı</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ">Mail</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ">Sil</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ">Düzenle</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ">Yorumlar</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ">Tur Geçmişi</th>
                                </tr>
                            </thead>
                            @foreach (var item in Model)
                            {
                                <tbody>
                                    <tr>
                                        <td>
                                            <p class="text-xs font-weight-bold mb-0">@item.Id</p>
                                        </td>
                                        <td>
                                            <p class="text-xs font-weight-bold mb-0">@item.Name @item.Surname</p>
                                        </td>
                                        <td>
                                            <p class="text-xs font-weight-bold mb-0">@item.UserName₺</p>
                                        </td>
                                        <td>
                                            <p class="text-xs font-weight-bold mb-0">@item.Email</p>
                                        </td>
                                        <td>
                                            <a href="/Admin/AUser/DeleteUser/@item.Id" class="btn btn-outline-danger">Sil</a>
                                        </td>
                                        <td>
                                            <a href="/Admin/AUser/EditUser/@item.Id" class="btn btn-outline-warning">Düzenle</a>
                                        </td>
                                        <td>
                                            <a href="/Admin/AUser/CommentUser/@item.Id" class="btn btn-outline-primary">Yorumlar</a>
                                        </td>
                                        <td>
                                            <a href="/Admin/AUser/ReservationUser/@item.Id" class="btn btn-outline-dark">Tur Geçmişi</a>
                                        </td>
                                    </tr>
                                </tbody>
                            }
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <a href="/Login/SıgnUp/" class="btn btn-outline-info">Yeni Kullanıcı Oluştur</a>
</div>