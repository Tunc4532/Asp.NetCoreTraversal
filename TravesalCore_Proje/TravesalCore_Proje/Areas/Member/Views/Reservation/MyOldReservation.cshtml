@using EntityLayer.Concrete
@model List<Reservation>

@{
    ViewData["Title"] = "MyOldReservation";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

@if(!Model.Any())
{
    <h3 style="text-align: center">Geçmiş RezervasyonunuzBulunmamaktadır</h3>
}
else
{
    <div class="container-fluid py-4">
        <div class="row">
            <div class="col-12">
                <div class="card mb-4">
                    <div class="card-header pb-0">
                        <h6>Geçmiş Rezervasyonlarım</h6>
                    </div>
                    <div class="card-body px-0 pt-0 pb-2">
                        <div class="table-responsive p-0">
                            <table class="table align-items-center mb-0">
                                <thead>
                                    <tr>
                                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7"># </th>
                                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Lokasyon </th>
                                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Kişi Sayısı</th>
                                        <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Rezervasyon Tarihi</th>
                                        <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Durum</th>
                                    </tr>
                                </thead>
                                @foreach (var item in Model)
                                {
                                    <tbody>
                                        <tr>
                                            <td>
                                                <p class="text-xs font-weight-bold mb-0">@item.ReservationID</p>
                                            </td>
                                            <td>
                                                <p class="text-xs font-weight-bold mb-0">@item.Destination.DenID</p>
                                            </td>
                                            <td>
                                                <p class="text-xs font-weight-bold mb-0">@item.PersonCount</p>
                                            </td>
                                            <td>
                                                <p class="text-xs font-weight-bold mb-0">@item.ReservationDate</p>
                                            </td>
                                            <td>
                                                <p class="text-xs font-weight-bold mb-0">@item.Status</p>
                                            </td>
                                        </tr>
                                    </tbody>
                                }
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}


